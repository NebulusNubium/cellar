
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main id="register">
  <h1>Registration</h1>

  {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}
    <div class="form-group">
        {{ form_label(registrationForm.username) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'input'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.password) }}
        {{ form_widget(registrationForm.password, {'attr': {'class': 'input'}}) }}
    </div>
    <button class="submit">S’inscrire</button>
  {{ form_end(registrationForm) }}

  <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>.</p>
</main>
{% endblock %}